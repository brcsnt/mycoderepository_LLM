# LLM API Ayarları
# Kullandığınız LLM provider'a göre ilgili API key'i doldurun

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google API Key (Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# Hugging Face API Key
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_api_key_here
AZURE_OPENAI_ENDPOINT=your_azure_endpoint_here

# Model Ayarları
LLM_PROVIDER=openai  # openai, anthropic, google, huggingface, azure
LLM_MODEL=gpt-4  # gpt-4, gpt-3.5-turbo, claude-3-opus, gemini-pro vb.
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# Uygulama Ayarları
EXCEL_PATH=complaint_chatbot/data/categories_template.xlsx
DEBUG_MODE=False
